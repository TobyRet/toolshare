
<div class = "row">
	<div class="col-sm-4 col-md-4 col-md-offset-4 col-sm-offset-4">
		<h3>Hire out your tools</h3>

		<%= bootstrap_form_for @tool do |f| %>
			<%= f.text_field :title %>
			<%= f.text_area :body, label: "Description", placeholder: "Write about the tool" %>
			<%= f.text_field :location %>
			<%= f.number_field :price, step: 0.1 %>
		    <%= f.file_field :picture %>
			<%= f.submit 'Submit', class: "btn btn-default" %>
		<% end %>
	</div>
</div>
