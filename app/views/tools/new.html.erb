<%= form_for @tool do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :body %>
	<%= f.text_area :body %>

	<%= f.label :location %>
	<%= f.text_field :location %>

	<%= f.label :price %>
	<%= f.number_field :price, step: 0.1 %>

	<%= f.label :picture %>
    <%= f.file_field :picture %>

	<%= f.submit 'Submit' %>

<% end %>